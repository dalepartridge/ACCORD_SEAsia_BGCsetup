#  echo $(readlink -f $PBS_O_WORKDIR)
# export OMP_NUM_THREADS=1

cd $PBS_O_WORKDIR
#
  echo " ";
  OCEANCORES=4320
  XIOSCORES=4
ulimit -c unlimited
